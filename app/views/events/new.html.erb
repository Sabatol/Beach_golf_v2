<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="w-50 my-5 p-5 bg-secondary text-white rounded text-center">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <h1 class="h3 mb-3 font-weight-normal text-center">
        Nouvel évènement 
        <div class="small">Etape 1/2</div>
      </h1>
      <br/>
      <div class="form-group text-center">
        <%= label_tag :title, "Intitulé" %><br />
        <%= text_field_tag :title, @event.title, class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= label_tag :start_date, "Date de début" %><br />
        <%= datetime_field_tag :start_date, @event.start_date, class: "form-control"%>
      </div>
      <div class="form-group text-center">
        <%= label_tag :duration, "Durée de l'évènement" %><br />
        <%= text_field_tag :duration, @event.duration, class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= label_tag :price, "Combien ça coûte ?" %><br />
        <%= text_field_tag :price, @event.price, class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= label_tag :description, "Descriptionus" %><br />
        <%= text_area_tag :description, @event.description, class: "form-control" %>
      </div>
      <div class="form-group text-center">
        <%= label_tag :location, "C'est où ?" %><br />
        <%= text_field_tag :location, @event.location, class: "form-control" %>
      </div>
      <div class="actions mt-5">
        <%= submit_tag "Créer l'évènement", class: "btn btn-lg btn-dark btn-block" %>
      </div>
    <% end %>
  </div>
</div>
