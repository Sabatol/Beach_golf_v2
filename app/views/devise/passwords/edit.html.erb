<div class="container d-flex justify-content-center align-items-center"  style="height:80vh" >
  <div class="w-50 my-5 p-5 bg-secondary text-white rounded text-center">
    <h1 class="h3 mb-3 font-weight-normal text-center">Définir nouveau mot de passe</h1>
    <br/>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.label :password, "Nouveau mot de passe" %><br/>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em><br/>
        <% end %>
        <br/>
      </div>
      <div class="form-group mb-4">
        <%= f.label :password_confirmation, "Confirme le nouveau mot de passe" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <%= f.submit "Changer mon mot de passe", class: "btn btn-lg btn-dark btn-block" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
