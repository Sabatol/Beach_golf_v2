<div class="container d-flex justify-content-center" style="min-height:85vh" >
  <div class="w-100 my-5 p-5 text-white rounded text-center">
    <ul class="nav nav-pills justify-content-center py-2 text-white" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
            aria-controls="pills-home" aria-selected="true">Infos personnelles</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
            aria-controls="pills-profile" aria-selected="false">Description</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
            aria-controls="pills-contact" aria-selected="false">A organisé</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <br/>
        <br/>
        <br/>
        <p> <strong>Prénom:</strong> <%= @user.first_name %> <br>
          <strong>Nom:</strong> <%= @user.last_name%> <br>
          <strong>Email:</strong> <%= @user.email%><br>
        </div>
        <div class="tab-pane fade pr-5" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
          <br/>
          <h3>Avatar actuel</h3>
          <%if @user.avatar.attached?%>
            <%= image_tag @user.avatar, size: "250x250", alt: 'avatar' %>
          <%else%>
            <img src="https://thispersondoesnotexist.com/image" width="250" height="250" class="d-inline-block align-center" alt="">
          <%end%>
          <%= render 'shared/avatar'%>
          <br/>
          <p><strong>Description :</strong><%= @user.description%></p>
          <br/>
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
          <br/>
          <br/>
          <br/>
          <%= render 'shared/events_list'%>
        </div>
      </div>
    </div>
  </div>
</div>
